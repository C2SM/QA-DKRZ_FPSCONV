netcdf cf_4.2b {
dimensions:
   lon = 3 ;

variables:
   float lon(lon) ;
    	 lon:long_name = "longitude" ;
	     lon:standard_name = "longitude" ;
      lon:units = "degrees_east" ;
      lon: positive = "up" ;
      lon:comment = "only vertical coordinate variables may habe a positive attribute" ;

// global attributes:
   :comment="Longitude axis" ;
   :Conventions = "CF-1.4" ;

data:
lon = 1., 2., 3.;
}